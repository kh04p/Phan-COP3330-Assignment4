<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="100.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.openController">
    <children>
        <Label layoutX="20.0" layoutY="10.0" prefHeight="37.0" prefWidth="360.0" text="Please enter the name of the file:" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
            <font>
                <Font name="Calibri Italic" size="18.0" />
            </font>
        </Label>
        <TextField fx:id="fileNameField" layoutX="20.0" layoutY="50.0" onAction="#fileName" prefHeight="26.0" prefWidth="290.0" promptText="Name">
         <font>
            <Font name="Calibri" size="14.0" />
         </font></TextField>
      <Button fx:id="selectFileButton" layoutX="326.0" layoutY="50.0" mnemonicParsing="false" onAction="#selectFile" text="Select">
         <font>
            <Font name="Calibri" size="14.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
